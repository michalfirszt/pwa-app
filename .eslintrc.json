{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier", "simple-import-sort"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "simple-import-sort/imports": "error",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2
      }
    ]
  }
}
